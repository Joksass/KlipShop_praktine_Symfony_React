{% extends 'base.html.twig' %}

{% block title %}Hello LuckyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <form action="{{ path('app_logout') }}" method="post">
            <button type="submit">Logout</button>
        </form>
    {% else %}
        <a href="{{ path('app_login') }}">Login</a>
        <a href="{{ path('app_register') }}">Register</a>
    {% endif %}

    <h1>Hello {{ controller_name }}! âœ…</h1>
    <h2>Your lucky number is: {{ lucky }}!</h2>
    
    {# CONTROLLERI PASIRINKTAS VIENAS DUOMO IS DB IR ISVESTAS TWIGE #}
    <h3> {{ myname }} </h3>

    {# IS DB DUOMENU ISVEDAMAS VIENAS BE FORO #}
    {% set pirmasDuomo = test[0] %}
    <h3> {{ pirmasDuomo.surname }} </h3>

    {# VISI DUOMENIS SU FORU #}
    {% for testas in test %}
        <h4>{{ testas.id }} {{ testas.name }} {{ testas.surname }} </h4>
    {% endfor %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">User #</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Arnas</td>
            <td>Joksas</td>
            <td>
            <button type="button" class="btn btn-success btn-sm">Approve</button>
            <button type="button" class="btn btn-danger btn-sm">Unapprove</button>
            <button type="button" class="btn btn-primary btn-sm">Edit</button>
            <button type="button" class="btn btn-dark btn-sm">Delete</button>
            </td>
        </tr>

        </tbody>
    </table>

</div>
{% endblock %}
